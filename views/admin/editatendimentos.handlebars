{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1>Editar atendimento:</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/atendimentos/edit" method="post">
            <input type="hidden" name="id" value="{{Atendimento.id}}">
            <label for="titulo">Titúlo:</label>
            <input type="text" id="titulo" name="titulo" placeholder="Titúlo do atendimento" class="form-control" value="{{Atendimento.titulo}}">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" placeholder="Slug" class="form-control" value="{{Atendimento.slug}}">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" id="descricao" placeholder="Descrição do atendimento" class="form-control" value="{{Atendimento.descricao}}">
            <label for="conteudo">Conteúdo:</label>
            <textarea id="conteudo" name="conteudo" class="form-control">{{Atendimento.conteudo}}</textarea>
            <label for="paciente">Paciente</label>
            <select name="paciente" class="form-select">
                {{#each pacientes}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum paciente registrado</option>
                {{/each}}
            </select>
            <hr>
            <button type="submit" class="btn btn-success">Editar atendimento</button>
        </form>
    </div>
</div>