<h1>Editar dados:</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/pacientes/edit" method="post">
            <input type="hidden" name="id" value="{{paciente.id}}">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome do paciente" class="form-control" value="{{paciente.nome}}">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Email do paciente" class="form-control" value="{{paciente.email}}">
            <label for="telefone">Telefone:</label>
            <input type="text" id="telefone" name="telefone" placeholder="Telefone do paciente" class="form-control" value="{{paciente.telefone}}">
            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf" placeholder="CPF do paciente" class="form-control" value="{{paciente.cpf}}">
            <label for="datanasc">Data de nascimento:</label>
            <input type="date" id="datanasc" name="datanasc" placeholder="Data de nascimento do paciente" class="form-control" value="{{paciente.datanasc}}">
            <label for="logradouro">Logradouro:</label>
            <input type="text" id="logradouro" name="logradouro" placeholder="Logradouro do paciente" class="form-control" value="{{paciente.logradouro}}">
            <label for="cidade">Cidade:</label>
            <input type="text" id="cidade" name="cidade" placeholder="Cidade do paciente" class="form-control" value="{{paciente.cidade}}">
            <label for="estado">Estado:</label>
            <input type="text" id="estado" name="estado" placeholder="Estado do paciente" class="form-control" value="{{paciente.estado}}">
            <hr>
            <button type="submit" class="btn btn-success">Editar</button>
        </form>
    </div>
</div>