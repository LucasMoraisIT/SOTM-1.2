{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1>Novo atendimento:</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/atendimentos/novo" method="post">
            <label for="titulo">Titúlo:</label>
            <input type="text" id="titulo" name="titulo" placeholder="Titúlo do atendimento" class="form-control">
            <label for="turno">Turno:</label>
            <input type="text" name="turno" id="turno" placeholder="Turno" class="form-control">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" id="descricao" placeholder="Descrição do atendimento" class="form-control">
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="paciente">Paciente</label>
            <select name="paciente" class="form-select">
                {{#each pacientes}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhum paciente registrado</option>
                {{/each}}
            </select>
            <hr>
            <button type="submit" class="btn btn-success">Salvar</button>
        </form>
    </div>
</div>
